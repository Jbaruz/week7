<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>

<main class="container">
    <div class="row">
        <div class="offset-md-1 col md-10">
            <h1><%=title%></h1>
            <%if(typeof displayName =='string'&& displayName){%>
            <a href="/bookList/add" class = "btn btn-primary" role = "button">
                <i class = "fas fa-plus-circle"></i>Add a Book</a>
                <%}%>
            <br>
            <table class="table table-bordered table-stripped table-hover">
                <!-- Header Row -->
                <tr>
                    <%if(typeof displayName =='string' && displayName){%>
                    <th class="text-content col-2">Name</th>
                    <th class="text-content col-2">Author</th>
                    <th class="text-content col-1">Published</th>
                    <th class="col-4">Description</th>
                    <th class="text-center col-1">Price</th>

                    <th class="text-center col-1"></th> <!--Added-->
                    <th class="text-center col-1"></th> <!--Added-->
                    <%}else{%>
                        <th class="text-content col-2">Name</th>
                        <th class="text-content col-2">Author</th>
                        <th class="text-content col-1">Published</th>
                        <th class="col-4">Description</th>
                        <th class="text-center col-1">Price</th>

                    <%}%>
                </tr>
                <!-- END Header Row -->
                <% for(let count =0; count<BookList.length; count ++){%>
                <tr>
                    <%if(typeof displayName =='string' && displayName){%>
                    <td class="text-center col-2"><%=BookList[count].name%></td>
                    <td class="text-center col-2"><%=BookList[count].Author%></td>
                    <td class="text-center col-1"><%=BookList[count].publish%></td>
                    <td class="col-4"><%=BookList[count].description%></td>
                    <td class="text-center col-1"><%=BookList[count].price%></td>
                    <td class="text-center col-1"><a href="/bookList/edit/<%=BookList[count]._id%>" class = "btn btn-primary"><i class = "fas fa-pencil alt"></i>Edit </a></td> <!--Added-->
                    <td class="text-center col-1"><a href="/bookList/delete/<%=BookList[count]._id%>" class = "btn btn-danger"><i class = "fas fa-trash alt"></i>Delete </a></td> <!--Added-->
                    <%}else{%>
                        <td class="text-center col-2"><%=BookList[count].name%></td>
                        <td class="text-center col-2"><%=BookList[count].Author%></td>
                        <td class="text-center col-1"><%=BookList[count].publish%></td>
                        <td class="col-4"><%=BookList[count].description%></td>
                        <td class="text-center col-1"><%=BookList[count].price%></td>
                    <%}%>
                </tr>
                <%}%>
            </table>
        </div>
    </div>
</main>

<%-include ../partials/bottom_nav.ejs%>
<%-include ../partials/footer.ejs%>

